@model MobileShop.Models.Nguoidung

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            //@Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Register</div>
                </div>
                <form asp-controller="Users" asp-action="Register">
                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Hoten)
                            @Html.TextBoxFor(m => m.Hoten, "", new { @class = "form-control", @placeholder = "Full Name" })
                            @Html.ValidationMessageFor(m => m.Hoten, "", new { @class = "badge badge-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                            @if (ViewBag.error != null)
                            {
                                <span class="badge badge-danger">@ViewBag.error</span>
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Matkhau)
                            @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Matkhau, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NhaplaiMatkhau)
                            @Html.PasswordFor(m => m.NhaplaiMatkhau, new { @class = "form-control", @placeholder = "Confim Password" })
                            @Html.ValidationMessageFor(m => m.NhaplaiMatkhau, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-danger" value="Register" />
                        </div>
                    </div>
                </form>
            </div>

        }
    </div>
</div>

