@model PagedList.IPagedList<MobileShop.Models.Sanpham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Quản lý sản phẩm</h2>
<p>
    <button class="btn-default">@Html.ActionLink("Thêm sản phẩm", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>
        <th>Mã sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Giá tiền</th>
        <th>Số lượng</th>
        <th>Mô tả</th>
        <th>Thẻ sim</th>
        <th>Bộ nhớ trong</th>
        <th>Sản phẩm mới</th>
        <th>Ram</th>
        <th>Ảnh bìa</th>
        <th>Tên hãng</th>
        <th>Chỉnh sửa</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Masp)</td>
            <td>@Html.DisplayFor(modelItem => item.Tensp)</td>
            <td>@Html.DisplayFor(modelItem => item.Giatien)</td>
            <td>@Html.DisplayFor(modelItem => item.Soluong)</td>
            <td>@Html.DisplayFor(modelItem => item.Mota)</td>
            <td>@Html.DisplayFor(modelItem => item.Thesim)</td>
            <td>@Html.DisplayFor(modelItem => item.Bonhotrong)</td>
            <td>@Html.DisplayFor(modelItem => item.Sanphammoi.Value)</td>
            <td>@Html.DisplayFor(modelItem => item.Ram)</td>
            <td>
                <img src="@Url.Content("~/HinhanhSP/" +item.Anhbia)" width="50" height="50" />
                @*@Html.DisplayFor(modelItem => item.Anhbia)*@
            </td>
            <td>@Html.DisplayFor(modelItem => item.Mahang)</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Masp })|
                @Html.ActionLink("Xoá", "Delete", new { id = item.Masp })
            </td>
        </tr>
    }
</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount




