@model MobileShop.Models.Mau
@{
    ViewBag.Title = "EditMau";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="mt-2" style="text-align:center">Sửa màu sản phẩm</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Mamau)
        <div class="form-group">
            <label>Tên màu</label>
            @Html.EditorFor(model => model.Tenmau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tenmau, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 mb-1">
                <input type="submit" value="Sửa" class="btn btn-success" />
                <a href="/Admin/HangsanxuatIndex"><button class="btn btn-danger">Hủy</button></a>
            </div>
            @Html.ActionLink("Xoá màu", "DeleteMau", new { id = Model.Mamau })
        </div>
    </div>
}
